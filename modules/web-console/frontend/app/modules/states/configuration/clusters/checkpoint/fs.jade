include ../../../../../../app/helpers/jade/mixins.jade

-var form = 'checkpoint'
-var model = 'checkpoint.FS'
-var checkpointFs = 'checkpoint.kind === "FS"'

div
    .details-row
        -var form = 'checkpointFsPathes'

        +ignite-form-group(ng-form=form ng-model=model + '.dirPaths')
            -var uniqueTip = 'Such path already exists!'

            ignite-form-field-label
                | Paths
            ignite-form-group-tooltip
                | Paths to a shared directory where checkpoints will be stored
            ignite-form-group-add(ng-show='#{enabled}' ng-click='(group.add = [{}])')
                | Add new path

            .group-content(ng-if='#{model}.length')
                -var model = 'obj.model';
                -var name = '"edit" + $index'
                -var valid = form + '[' + name + '].$valid'
                -var save = model + '[$index] = ' + model

                div(ng-repeat='model in #{model} track by $index' ng-init='obj = {}')
                    label.col-xs-12.col-sm-12.col-md-12
                        .indexField
                            | {{ $index+1 }})
                        +table-remove-conditional-button(model, enabled, 'Remove path')
                        span(ng-hide='field.edit')
                            a.labelFormField(ng-click='#{enabled} && (field.edit = true) && (#{model} = model)') {{ model }}
                        span(ng-if='field.edit')
                            // (name, model, items, valid, save, placeholder, newItem)
                            +table-text-field('Path:', name, model, model + '.dirPaths', valid, save, false)
                                +table-save-button(valid, save, false)
                                +unique-feedback(name, uniqueTip)

            .group-content(ng-repeat='field in group.add')
                -var model = 'new';
                -var name = '"new"'
                -var valid = form + '[' + name + '].$valid'
                -var save = model + '.push(' + model + ')'

                div
                    label.col-xs-12.col-sm-12.col-md-12
                        +table-java-class-field('model manager', name, model, model + '.dirPaths', valid, save, true)
                            +table-save-button(valid, save, true)
                            +unique-feedback(name, uniqueTip)

            .group-content-empty(ng-if='!(#{model}.length) && !group.add.length')
                | Not defined
    .details-row
        +java-class('Listener', model + '.FS.checkpointListener', '"checkpointFsListener" + $index', 'true', checkpointFs,
            'Custom FailoverSpi implementation class name.')

